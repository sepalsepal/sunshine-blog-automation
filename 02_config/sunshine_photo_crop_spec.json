{
  "spec_name": "Sunshine Photo Crop Spec",
  "version": "1.0",
  "created": "2026-02-12",
  "approved_by": "PD 박세준",
  "locked": true,

  "output": {
    "resolution": [1080, 1080],
    "format": "PNG",
    "quality": 95,
    "color_mode": "RGB"
  },

  "face_preservation": {
    "description": "햇살이 얼굴 보존 규칙",
    "priority_order": [
      "1. 눈 (양쪽 모두 - 감정 전달 핵심)",
      "2. 코 + 입 (흰 주둥이 특징)",
      "3. 귀 (최소 한쪽 50% 이상)",
      "4. 상반신"
    ],
    "required_elements": {
      "eyes": "both_visible",
      "nose": "fully_visible",
      "mouth": "fully_visible", 
      "ears": "at_least_one_50_percent"
    }
  },

  "crop_offset_rules": {
    "description": "원본 비율별 크롭 오프셋",
    "vertical_3_4": {
      "ratio": "3:4",
      "direction": "상단 우선",
      "y_offset_percent": -15,
      "note": "세로 이미지는 상단으로 이동하여 얼굴 보존"
    },
    "horizontal_4_3": {
      "ratio": "4:3",
      "direction": "중앙",
      "y_offset_percent": 0,
      "note": "가로 이미지는 중앙 크롭"
    },
    "vertical_9_16": {
      "ratio": "9:16",
      "direction": "상단 강조",
      "y_offset_percent": -20,
      "note": "긴 세로 이미지는 상단 크게 이동"
    },
    "square_1_1": {
      "ratio": "1:1",
      "direction": "없음",
      "y_offset_percent": 0,
      "note": "리사이즈만 적용"
    }
  },

  "smart_crop_algorithm": {
    "step_1": "이미지 비율 감지",
    "step_2": "비율별 기본 y_offset 적용",
    "step_3": "크롭 영역 내 얼굴 요소 검증",
    "step_4": "검증 실패 시 offset 조정 재시도",
    "fallback": "수동 검수 요청"
  },

  "validation_checklist": [
    {"item": "양쪽 눈 모두 보임", "required": true},
    {"item": "코 전체 보임", "required": true},
    {"item": "입 전체 보임", "required": true},
    {"item": "최소 한쪽 귀 50% 이상", "required": true},
    {"item": "흰 주둥이 특징 식별 가능", "required": true},
    {"item": "상반신 노출", "required": false}
  ],

  "forbidden": [
    "눈 잘림 (한쪽이라도)",
    "코 반 이상 잘림",
    "얼굴 없이 몸통만 노출",
    "뒷모습만 나온 이미지",
    "흐릿하거나 초점 안 맞는 이미지"
  ],

  "cta_slide_additional": {
    "bottom_blur_height_percent": 35,
    "blur_radius": 30,
    "dark_overlay_alpha": 0.15,
    "gradient_transition_percent": 10
  },

  "source_folder_rules": {
    "description": "CTA 및 8번 이미지 소스 폴더 규칙",
    "locked": true,
    "approved_by": "PD 박세준",
    "approved_date": "2026-02-12",
    
    "allowed_source": {
      "path": "/contents/sunshine photos/00_Best",
      "cropped_path": "/contents/sunshine photos/00_Best_cropped",
      "description": "이 폴더의 이미지만 CTA 및 8번 슬라이드에 사용 가능"
    },
    
    "usage": {
      "cta_slide": "00_Best 또는 00_Best_cropped 이미지만 사용",
      "slide_8": "00_Best 또는 00_Best_cropped 이미지만 사용",
      "other_folders": "사용 금지"
    },
    
    "forbidden": [
      "다른 폴더의 햇살이 이미지 사용",
      "AI 생성 이미지 사용 (8번 슬라이드)",
      "검증되지 않은 실사 이미지 사용"
    ]
  }
}
