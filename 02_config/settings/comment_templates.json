      ],
      "priority": 2
    },

    "emoji_love": {
      "keywords": ["heart", "love"],
      "emoji_patterns": ["❤", "🥰", "😍", "💕", "🩷", "💗"],
      "responses": [
        "감사합니다! :)",
        "햇살이가 좋아해요! :)"
      ],
      "priority": 3
    },

    "dog_cute": {
      "keywords": ["귀여워", "이쁘", "예뻐", "멋져", "사랑스러", "천사"],
      "responses": [
        "감사해요! 햇살이에게 전해줄게요! :)",
        "햇살이가 기뻐할 것 같아요! 감사합니다!",
        "우리 햇살이 칭찬해주셔서 감사해요! :)"
      ],
      "priority": 2
    },

    "request_topic": {
      "keywords": ["다음", "다른", "궁금", "알려주", "알고싶"],
      "responses": [
        "좋은 제안이에요! 다음 콘텐츠에 참고할게요 :)",
        "관심 가져주셔서 감사해요! 곧 다양한 주제로 찾아올게요!"
      ],
      "priority": 2
    },

    "follow": {
      "keywords": ["팔로우", "구독", "팔로잉"],
      "responses": [
        "팔로우 감사합니다! 앞으로도 좋은 정보 전해드릴게요! :)",
        "환영해요! 유익한 콘텐츠로 보답할게요!"
      ],
      "priority": 1
    },

    "save": {
      "keywords": ["저장", "스크랩", "save"],
      "responses": [
        "저장해주셔서 감사해요! 필요할 때 참고해주세요 :)",
        "감사합니다! 도움이 되셨으면 좋겠어요!"
      ],
      "priority": 2
    }
  },

  "spam_filters": {
    "patterns": [
      "팔로우.*해.*주세요",
      "팔로우.*부탁",
      "구독.*부탁",
      "DM.*주세요",
      "DM.*보내",
      "광고.*클릭",
      "홍보.*링크",
      "무료.*이벤트",
      "할인.*코드",
      "http://",
      "https://",
      "www\\.",
      "bit\\.ly",
      "@[a-z]{3,}.*@[a-z]"
    ],
    "min_length": 1,
    "max_emoji_ratio": 0.9
  },

  "default_response": {
    "enabled": false,
    "template": "댓글 감사합니다! :)"
  },

  "settings": {
    "daily_limit": 50,
    "cooldown_per_user_hours": 24,
    "min_comment_length": 2,
    "skip_own_comments": true,
    "skip_verified_accounts": false,
    "response_delay_seconds": [30, 120]
  }
}
