  "axes": {
    "intent": {
      "description": "목적 축",
      "values": {
        "AUTHORITY": {
          "label": "정보 전달 / 전문성",
          "kpi": ["dwell_time", "trust_score"],
          "emotion": "trust"
        },
        "TRUST": {
          "label": "경고 / 안전",
          "kpi": ["save_rate", "share_rate"],
          "emotion": "fear"
        },
        "ENGAGEMENT": {
          "label": "참여 유도",
          "kpi": ["comment_count", "reaction_rate"],
          "emotion": "curiosity"
        },
        "SAVE": {
          "label": "저장 유도",
          "kpi": ["save_rate"],
          "emotion": "urgency"
        },
        "CTA": {
          "label": "전환 유도",
          "kpi": ["click_rate", "profile_visit"],
          "emotion": "curiosity"
        }
      }
    },

    "platform": {
      "description": "플랫폼 축",
      "values": {
        "BLOG": {
          "label": "네이버 블로그",
          "characteristics": ["SEO", "dwell_time", "search_traffic"],
          "max_length": 10000,
          "image_slots": 8
        },
        "INSTA": {
          "label": "인스타그램",
          "characteristics": ["save", "share", "visual_first"],
          "max_length": 2200,
          "image_slots": 10
        },
        "THREAD": {
          "label": "쓰레드",
          "characteristics": ["conversation", "viral", "short_text"],
          "max_length": 500,
          "image_slots": 1
        }
      }
    },

    "format": {
      "description": "포맷 축",
      "values": {
        "CHECKLIST": {
          "label": "체크리스트형",
          "structure": ["intro", "checklist_items", "save_cta"],
          "markers": ["checkbox", "bullet"]
        },
        "WARNING": {
          "label": "경고 강조형",
          "structure": ["alert", "danger_detail", "emergency_action"],
          "markers": ["warning_emoji", "danger_keywords"]
        },
        "STORY": {
          "label": "스토리텔링형",
          "structure": ["hook", "narrative", "lesson", "cta"],
          "markers": ["햇살이_voice", "personal_experience"]
        },
        "DATA": {
          "label": "데이터 팩트형",
          "structure": ["fact", "evidence", "conclusion"],
          "markers": ["numbers", "citations", "expert_tone"]
        },
        "QNA": {
          "label": "Q&A형",
          "structure": ["question", "answer", "follow_up"],
          "markers": ["question_format", "direct_answer"]
        }
      }
    }
  },

