{
  "_meta": {
    "version": "1.0",
    "description": "WO-STRATEGY-MATRIX: Safety × Intent 매핑",
    "created": "2026-02-12",
    "author": "김부장"
  },

  "safety_intent_rules": {
    "SAFE": {
      "default_intent": "AUTHORITY",
      "allowed_intents": ["AUTHORITY", "SAVE", "CTA", "ENGAGEMENT"],
      "forbidden_intents": [],
      "notes": "모든 Intent 허용"
    },
    "CAUTION": {
      "default_intent": "TRUST",
      "allowed_intents": ["TRUST", "AUTHORITY", "SAVE"],
      "forbidden_intents": ["CTA"],
      "restricted_intents": {
        "CTA": {
          "condition": "approval_required",
          "approver": "김부장"
        }
      },
      "notes": "CTA는 제한적 사용 (승인 필요)"
    },
    "FORBIDDEN": {
      "default_intent": "TRUST",
      "allowed_intents": ["TRUST", "AUTHORITY"],
      "forbidden_intents": ["ENGAGEMENT", "CTA"],
      "locked": true,
      "notes": "TRUST 고정 권장, 재미/전환 목적 금지"
    }
  },

  "intent_priority": {
    "SAFE": ["AUTHORITY", "SAVE", "ENGAGEMENT", "CTA"],
    "CAUTION": ["TRUST", "AUTHORITY", "SAVE"],
    "FORBIDDEN": ["TRUST", "AUTHORITY"]
  },

  "validation_rules": [
    {
      "rule_id": "FORBIDDEN_NO_FUN",
      "condition": "safety == 'FORBIDDEN' && intent == 'ENGAGEMENT'",
      "action": "BLOCK",
      "message": "FORBIDDEN 콘텐츠는 ENGAGEMENT Intent 사용 불가"
    },
    {
      "rule_id": "FORBIDDEN_NO_CTA",
      "condition": "safety == 'FORBIDDEN' && intent == 'CTA'",
      "action": "BLOCK",
      "message": "FORBIDDEN 콘텐츠는 CTA Intent 사용 불가"
    },
    {
      "rule_id": "CAUTION_CTA_APPROVAL",
      "condition": "safety == 'CAUTION' && intent == 'CTA'",
      "action": "REQUIRE_APPROVAL",
      "approver": "김부장",
      "message": "CAUTION 콘텐츠의 CTA Intent는 승인 필요"
    }
  ],

  "emotion_mapping": {
    "SAFE": {
      "AUTHORITY": "trust",
      "SAVE": "curiosity",
      "ENGAGEMENT": "curiosity",
      "CTA": "curiosity"
    },
    "CAUTION": {
      "TRUST": "fear",
      "AUTHORITY": "trust",
      "SAVE": "urgency"
    },
    "FORBIDDEN": {
      "TRUST": "fear",
      "AUTHORITY": "fear"
    }
  },

  "risk_level_mapping": {
    "SAFE": "low",
    "CAUTION": "medium",
    "FORBIDDEN": "critical"
  }
}
